{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "declaration": false,
    "sourceMap": false
  },
  "include": ["index.ts", "socket.ts", "store.ts", "types.ts"],
  "exclude": ["node_modules", "client", "dist"]
}
