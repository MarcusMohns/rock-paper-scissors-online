{
  "name": "socket-io-server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"tsx watch index.ts\" \"npm --prefix client run dev\"",
    "build-client": "npm --prefix client run build",
    "start": "NODE_ENV=production tsx index.ts",
    "start:prod": "NODE_ENV=production node dist/index.js"
  },
  "dependencies": {
    "express": "^5.1.0",
    "socket.io": "^4.8.1",
    "tsx": "^4.20.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "concurrently": "^8.2.0"
  }
}
