{
  "name": "socket-io-server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"tsx watch index.ts\" \"npm --prefix client run dev\"",
    "build-client": "npm --prefix client ci && npm --prefix client run build",
    "build-server": "npx tsc -p tsconfig.build.json",
    "build": "npm run build-server && npm run build-client",
    "start": "NODE_ENV=production node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js"
  },
  "dependencies": {
    "@types/node": "^20.5.1",
    "express": "^5.1.0",
    "socket.io": "^4.8.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "concurrently": "^8.2.0"
  }
}
